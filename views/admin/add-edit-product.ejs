<%- include('../includes/start.ejs') %>
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <form class="product-form" method="POST" enctype="multipart/form-data"
      action="<% if (editMode) { %>/admin/edit-product<%  } else { %>/admin/add-product<% } %>">
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title"
          value="<% if (editMode) { %><%= product.title %><% } %>">
      </div>
      <div class="form-control">
        <label for="image">Image</label>
        <input type="file" name="image" id="image"
          value="<% if (editMode) { %><%= product.imageUrl %><% } %>">
      </div>
      <div class="form-control">
        <label for="price">Price (&#8377;)</label>
        <input type="number" name="price" id="price" step="1"
          value="<% if (editMode) { %><%= product.price %><% } %>">
      </div>
        <div class="form-control">
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="5"><% if (editMode) { %><%= product.description %><% } %></textarea>
      </div>
      <% if (editMode) { %>
        <input type="hidden" name="pid" value="<%= product._id %>">
      <% } %>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <button class="btn" type="submit">
        <% if (editMode) { %> Edit
        <% } else { %> Add <% } %> Product
      </button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>